{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dotnet build",
            "type": "shell",
            "command": "dotnet build --project PingCRM.csproj"
        },
        {
            "label": "dotnet run",
            "type": "shell",
            "command": "dotnet run --project PingCRM.csproj"
        },
        {
            "label": "dotnet watch",
            "type": "shell",
            "command": "dotnet watch --project PingCRM.csproj"
        },
        {
            "label": "npm run build",
            "type": "shell",
            "command": "npm run build",
            "options": {
                "cwd": "${workspaceFolder}/ClientApp"
            }
        },
        {
            "label": "npm run dev",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/ClientApp"
            }
        },
        {
            "label": "Generate TypeScript Types",
            "type": "shell",
            "command": "dotnet build && dotnet-typegen generate && node scripts/combine-types.js",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
    ]
}
